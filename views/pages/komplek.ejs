<section class="section">
    <div class="container-fluid">
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <div class="row mb-2">
                            <div class="col-12 d-flex justify-content-between align-items-center">
                                <h3 class="text-gray"><b>Data Biodigester</b></h3>
                                <a class="btn btn-primary" href="/biodigester/create">Tambah Data Biodigester</a>
                            </div>
                        </div>
                        <div class="table-wrapper table-responsive" style="display: grid;">
                            <table id="thetable" class="table-style-1 stripe nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">No.</th>
                                        <th class="text-center">Nama Tempat</th>
                                        <th class="text-center">Kecamatan</th>
                                        <th class="text-center">Kelurahan</th>
                                        <th class="text-center">Kota</th>
                                        <th class="text-center">Provinsi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((item, index) => { %>
                                        <tr class="<%= index % 2 === 0 ? 'bg-primary-400' : 'bg-orange-400' %>" style="border-radius: 8px;">
                                            <td class="text-center rad-left no-bg" style="padding: 10px;"><%= index + 1 %></td>
                                            <td class="text-center" style="padding: 10px;"><%= item.NAMA_KOMPLEK %></td>
                                            <td class="text-center" style="padding: 10px;"><%= item.KECAMATAN %></td>
                                            <td class="text-center" style="padding: 10px;"><%= item.KELURAHAN %></td>
                                            <td class="text-center" style="padding: 10px;"><%= item.KOTA %></td>
                                            <td class="text-center rad-right no-bg" style="padding: 10px;"><%= item.PROVINSI %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function() {
        $('#thetable').DataTable({
            "stripeClasses": ['bg-primary-400', 'bg-orange-400'],
            "paging": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "order": [],
        });
    });
</script>